<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<Operation Class="PatchOperationFindMod">
	<mods>
		<li>Vanilla Achievements Expanded</li>
	</mods>
	<match Class="PatchOperationSequence">
		<operations>
			<li Class="PatchOperationFindMod">
			<mods>
				<li>Science Never Stops: Ambition of the Cosmic</li>
			</mods>
			<match Class="PatchOperationSequence">
				<operations>
					
					<li Class="PatchOperationReplace">
						<xpath>/Defs/AchievementsExpanded.AchievementDef[defName="SNS_Achievement_CosmicMatterTrade_single"]/label</xpath>
						<value>
							<label>Torture Is A Literal Currency, Now</label>
						</value>
					</li>
					<li Class="PatchOperationReplace">
						<xpath>/Defs/AchievementsExpanded.AchievementDef[defName="SNS_Achievement_CosmicMatterTrade_single"]/description</xpath>
						<value>
							<description>Sell any amount of Torture Liquid for Silver.</description>
						</value>
					</li>

                    <li Class="PatchOperationReplace">
						<xpath>/Defs/AchievementsExpanded.AchievementDef[defName="SNS_Achievement_CosmicMatterTrade_hundred"]/label</xpath>
						<value>
							<label>The First Payday</label>
						</value>
					</li>
					<li Class="PatchOperationReplace">
						<xpath>/Defs/AchievementsExpanded.AchievementDef[defName="SNS_Achievement_CosmicMatterTrade_hundred"]/description</xpath>
						<value>
							<description>Get a job at Wal-Mar--I mean, Sell a hundred Torture Liquid in a single transaction.</description>
						</value>
					</li>

					<li Class="PatchOperationReplace">
						<xpath>/Defs/AchievementsExpanded.AchievementDef[defName="SNS_Achievement_CosmicMatterTrade_milestone"]/label</xpath>
						<value>
							<label>Riches Built Atop A Foundation Of Corpses</label>
						</value>
					</li>
					<li Class="PatchOperationReplace">
						<xpath>/Defs/AchievementsExpanded.AchievementDef[defName="SNS_Achievement_CosmicMatterTrade_milestone"]/description</xpath>
						<value>
							<description>Sell ten-thousand (10,000) Torture Liquid total. Does not have to be done all in one transaction. You may optionally sell your soul to the Wal-Mart produce section to make my job easier.</description>
						</value>
					</li>
					
				</operations>
			</match>
			</li>
		</operations>
	</match>
</Operation>

</Patch>