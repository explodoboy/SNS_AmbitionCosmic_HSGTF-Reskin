<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<Operation Class="PatchOperationFindMod">
    <mods>
        <li>Science Never Stops: Ambition of the Cosmic</li>
    </mods>
	<match Class="PatchOperationSequence"> 
		<operations>
			<!-- Replace labels of workgivers. -->
			<!-- Cosmic Forge/Abyssal Forge -->
			<li Class="PatchOperationReplace">
				<xpath>/Defs/WorkGiverDef[defName="DoBills_SNS_Unobtainer"]/label</xpath>
				<value>
					<label>commit several war crimes at Overpowered Forge</label>
				</value>
			</li>
			<!-- Replace thing -->
			<li Class="PatchOperationReplace">
				<xpath>/Defs/WorkGiverDef[defName="DoBills_SNS_Constructor"]/label</xpath>
				<value>
					<label>insult various religions at Torture Fabricator</label>
				</value>
			</li>
			<!-- Replace thing -->
			<li Class="PatchOperationReplace">
				<xpath>/Defs/WorkGiverDef[defName="DoBills_SNS_CosmicDrawer"]/label</xpath>
				<value>
					<label>violate several galactic treaties at Abyssal Manipulator</label>
				</value>
			</li>
			<!-- Replace thing -->
			<li Class="PatchOperationReplace">
				<xpath>/Defs/WorkGiverDef[defName="DoBills_SNS_CosmicCall"]/label</xpath>
				<value>
					<label>violate basic sentient rights at P.A.I.N. Fabricator</label>
				</value>
			</li>
			<!-- Replace thing -->
			<li Class="PatchOperationReplace">
				<xpath>/Defs/WorkGiverDef[defName="DoBills_SNS_PinnacleFabricator"]/label</xpath>
				<value>
					<label>violate the universe at the Torture Device</label>
				</value>
			</li>
		</operations>
	</match>
</Operation>

</Patch>